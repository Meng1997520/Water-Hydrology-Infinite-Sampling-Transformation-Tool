                    <Button Content="总母路(手动)" Width="150" Margin="5" FontWeight="Bold"></Button>
                    <Button Content="总母路手动观察" Width="150" Margin="5" FontWeight="Bold"></Button>
                    <Button Content="总母路手动顶置" Width="150" Margin="5" FontWeight="Bold"></Button>
                    <Button  Style="{StaticResource MyButtonStyle2}" Background="Blue"></Button>
                    <Button  Style="{StaticResource MyButtonStyle2}" Background="Yellow"></Button>
                    <Button  Style="{StaticResource MyButtonStyle2}" Background="Green"></Button>
                </WrapPanel>



            </Grid>
            <Thumb Grid.Row="4" Background="Silver" DragDelta="Thumb_DragDelta" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        </Grid>
        <Grid Grid.Column="1">
            
            <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>

    </Grid>
</Window>
